<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="8dp"
    android:paddingRight="10dp"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/login_logo" />

    <TextView
        android:id="@+id/text_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignTop="@+id/single_user_img"
        android:layout_toEndOf="@+id/single_user_img" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/text_fullname"
        android:layout_alignStart="@+id/text_fullname" />

    <Button
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_more_menu"
        android:layout_marginLeft="300dp"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/text_fullname"
        android:layout_alignEnd="@+id/btn_video_length" />

    <ImageView
        android:id="@+id/image_video_list"
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/single_user_img"
        android:layout_below="@+id/single_user_img"
        app:srcCompat="@drawable/login_logo_new"
        android:scaleType="centerCrop"
        />
       <Button
           android:id="@+id/btn_video_length"
           android:layout_width="50dp"
           android:layout_height="20dp"
           android:background="@drawable/time_label_bg"
           android:layout_marginBottom="17dp"
           android:textColor="@android:color/white"
           android:layout_marginEnd="13dp"
           android:alpha="0.8"
           android:layout_above="@+id/text_video_title"
           android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_views"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/btn_video_length"
        android:layout_alignStart="@+id/image_video_list"
        android:background="@drawable/views_label_bg"
        android:drawableLeft="@drawable/ic_views"
        android:alpha="0.7"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="15dp"
        android:layout_gravity="center"

        android:text="53.8"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/text_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image_video_list"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_alignStart="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/image_video_list"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_below="@+id/text_video_title"
        android:id="@+id/linearLayout">

        <Button
        android:id="@+id/btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/like"

        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

        <Button
            android:id="@+id/btn_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableLeft="@drawable/dislike"
            android:clickable="true"
            android:background="@android:color/white"
            android:layout_marginLeft="25dp"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:text="Button" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/white"
            android:drawableRight="@drawable/btn_share"
            android:text="Share" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/text_input_line_full_width"
        android:layout_alignParentBottom="true"
     android:layout_marginBottom="2dp" />





</RelativeLayout>